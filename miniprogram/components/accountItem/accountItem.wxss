/* components/accountItem.wxss */

.row {
    height: auto;
    flex-direction: column;
    align-items: flex-start;
    box-sizing: border-box;
    text-align: left;
    margin-top: 10rpx;
    width: 100%;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-left: none;
    border-right: none;
    display: flex;
    transition: all 300ms ease;
}

.row-big {
    padding: 20rpx 5rpx 20rpx 40rpx;
}

.row-sm {
    padding: 5rpx 15rpx 5rpx 60rpx;
}

.bar{
    width: 100%;
    height: 20rpx;
}