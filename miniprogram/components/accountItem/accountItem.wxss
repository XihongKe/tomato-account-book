.row {
  height: auto;
  padding: 5rpx 0 5rpx 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  text-align: left;
  margin-top: 10rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  transition: all 300ms ease;
}