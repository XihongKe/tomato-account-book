/* pages/databaseGuide/databaseGuide.wxss */

.overview {
    height: auto;
    padding: 5rpx 0 5rpx 40rpx;
    flex-direction: column;
    align-items: flex-start;
    box-sizing: border-box;
    text-align: left;
    margin-top: 40rpx;
    width: 100%;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-left: none;
    border-right: none;
    display: flex;
    transition: all 300ms ease;
}

.overview .net-assets .big {
    font-size: 2rem;
}

.overview .other-assets {
    color: #bbb;
}

.account-item {
    width: 100%;
}

.subtitle {
    height: auto;
    width: 100%;
    padding: 5rpx 0 5rpx 40rpx;
    flex-direction: column;
    align-items: flex-start;
    box-sizing: border-box;
    text-align: left;
    margin-top: 40rpx;
    font-size: 0.8rem;
    color: #bbb;
}