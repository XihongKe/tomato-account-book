<view>
    <form catchsubmit="onSave">
        <view class="page-section">
            <view class="page-section-title">对方名称</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__bd" style="margin: 30rpx 0">
                        <input bindinput="bindinput" type="text" model:value="{{name}}" class="weui-input" name="name"
                               placeholder="请输入付款人名称"/>
                    </view>
                </view>
            </view>

            <view class="page-section-title">应收金额</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__bd" style="margin: 30rpx 0">
                        <input bindinput="bindinput" type="digit" model:value="{{total}}" class="weui-input"
                               name="total"
                               placeholder="请输入应收金额"/>
                    </view>
                </view>
            </view>

            <view class="btn-area">
                <button style="margin: 30rpx auto" type="primary" formType="submit">保存</button>
                <button wx:if="{{id}}" style="margin: 30rpx auto" type="warn" bindtap="onDel">删除</button>
            </view>
        </view>
    </form>
</view>